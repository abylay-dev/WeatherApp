<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Almaty"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvzapataya"
        app:layout_constraintBottom_toTopOf="@id/tvCoord"/>

    <TextView
        android:id="@+id/tvzapataya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=", "
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCountryName"
        app:layout_constraintEnd_toStartOf="@id/tvCountryName"
        />
    
    <TextView
        android:id="@+id/tvCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="KZ"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvzapataya"
        />

    <TextView
        android:id="@+id/tvCoord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordination"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvCityName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvLon"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="#FFC107"
        />

    <TextView
        android:id="@+id/tvLon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCoord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTempDescription"
        android:paddingTop="7dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="Lon: "
        app:layout_constraintEnd_toStartOf="@id/tvLat"
        />

    <TextView
        android:id="@+id/tvLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvCoord"
        app:layout_constraintStart_toEndOf="@id/tvLon"
        android:paddingTop="7dp"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="Lat: "
        />

    <TextView
        android:id="@+id/tvTempDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvLon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvFeelslike"
        android:paddingTop="10dp"
        tools:text="Temperature"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="#FFC107"
        />

    <TextView
        android:id="@+id/tvFeelslike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTempDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvWind"
        android:paddingTop="7dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="Feels like: "
        app:layout_constraintEnd_toStartOf="@id/tvPressure"
        />

    <TextView
        android:id="@+id/tvPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTempDescription"
        app:layout_constraintStart_toEndOf="@id/tvFeelslike"
        android:paddingTop="7dp"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="Pressure: "
        />

    <TextView
        android:id="@+id/tvWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:textColor="#FFC107"
        android:text="Wind"
        app:layout_constraintTop_toBottomOf="@id/tvFeelslike"
        app:layout_constraintBottom_toTopOf="@id/tvWind_speed"
        />

    <TextView
        android:id="@+id/tvWind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="Speed: "
        app:layout_constraintTop_toBottomOf="@id/tvWind"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvWind_degree"
        app:layout_constraintBottom_toTopOf="@id/tvdescr"
        />

    <TextView
        android:id="@+id/tvWind_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingStart="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#F0000000"
        tools:text="degree: "
        app:layout_constraintTop_toBottomOf="@id/tvWind"
        app:layout_constraintStart_toEndOf="@id/tvWind_speed"
        />

    <TextView
        android:id="@+id/tvdescr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:textSize="23sp"
        android:textStyle="normal"
        android:textColor="#03A9F4"
        app:layout_constraintTop_toBottomOf="@id/tvWind_speed"
        tools:text="Temperature"
        />


</androidx.constraintlayout.widget.ConstraintLayout>